{
  "name": "ponyFiction",
  "version": "1.0.0",
  "license": "GPLv3",
  "author": "Andriy Kushnir (Orhideous)",
  "description": "Library CMS for stories.everypony.ru",
  "repository": {
    "type": "git",
    "url": "https://github.com/Orhideous/ponyFiction.git"
  },
  "bugs": {
    "url": "https://github.com/Orhideous/ponyFiction/issues"
  },
  "dependencies": {
    "bower": "~1.4.1",
    "gulp": "~3.9.0",
    "browserify": "~10.2.4",
    "coffee-script": "~1.9.3",
    "coffeeify": "~1.1.0",
    "del": "~1.2.0",
    "gulp-rename": "~1.2.2",
    "gulp-util": "~3.0.5",
    "vinyl-buffer": "~1.0.0",
    "vinyl-source-stream": "~1.1.0",
    "gulp-stylus": "~2.0.3",
    "bower-resolve": "~2.2.1",
    "resolve": "~1.1.6",
    "lodash": "~3.10.0",
    "fs": "0.0.2",
    "debowerify": "~1.3.1"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "browserify": {
    "transform": [
      "coffeeify",
      "debowerify"
    ],
    "extensions": [
      ".js",
      ".coffee"
    ]
  },
  "js": {
    "entries": [
      "./ponyFiction/static/src/js/main.coffee"
    ],
    "watches": [
      "./ponyFiction/static/src/js/**/*.coffee"
    ]
  },
  "css": {
    "entries": [
      "./ponyFiction/static/src/css/main.styl"
    ],
    "watches": [
      "./ponyFiction/static/src/css/**/*.styl"
    ],
    "includes": [
      "./bower_components"
    ]
  },
  "dist": "./ponyFiction/static/dist"
}
